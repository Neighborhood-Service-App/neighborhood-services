name: Build and Push Gateway Service to Docker

on:
  push:
    branches:
      - main
    paths:
      - 'back-end/gateway/**'
  pull_request:
    branches:
      - main
    paths:
      - 'back-end/gateway/**'

jobs:
  build-and-push-gateway-service:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout Repository
      uses: actions/checkout@v3
    
    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v2
    
    - name: Log in to Docker Hub
      uses: docker/login-action@v2
      with:
        username: ${{ secrets.DOCKER_USERNAME }}
        password: ${{ secrets.DOCKER_ACCESS_TOKEN }}
    
    - name: Build Gateway Service Docker Image
      run: |
        docker build -t ${{ secrets.DOCKER_USERNAME }}/gateway:${{ github.sha }} back-end/gateway
    
    - name: Push Gateway Service Docker Image
      run: |
        docker push ${{ secrets.DOCKER_USERNAME }}/gateway:${{ github.sha }}
