name: Build and Push Discovery Service to Docker

on:
  push:
    branches:
      - main
    paths:
      - 'back-end/discovery/**'
  pull_request:
    branches:
      - main
    paths:
      - 'back-end/discovery/**'

jobs:
  build-and-push-discovery-service:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout Repository
      uses: actions/checkout@v3
    
    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v2
    
    - name: Log in to Docker Hub
      uses: docker/login-action@v2
      with:
        username: ${{ secrets.DOCKER_USERNAME }}
        password: ${{ secrets.DOCKER_ACCESS_TOKEN }}
    
    - name: Build Discovery Service Docker Image
      run: |
        docker build -t ${{ secrets.DOCKER_USERNAME }}/discovery:${{ github.sha }} back-end/discovery
    
    - name: Push Discovery Service Docker Image
      run: |
        docker push ${{ secrets.DOCKER_USERNAME }}/discovery:${{ github.sha }}
